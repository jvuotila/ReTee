@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "ReTeeMaster.cshtml";
}

<div class="container-fluid artileWrapper">
    <div class="container">
        <div class="col-xs-12 col-md-12 articleContainer">
            <div class="col-md-1 hidden-xs"></div>
            <div class="col-md-10 col-xs-12 articleBody">
                <h1>@CurrentPage.Name</h1>
                <article class="lead">
                    @Html.Raw(Umbraco.Field(CurrentPage, "bodyText"))
                </article>

                @{
                    if (CurrentPage.Children.Count() > 0)
                    {
                        foreach (var Benefit in CurrentPage.Children)
                        {
                            <div class="row boardMemberContainer">
                                <div class="col-xs-12 col-md-4">
                                    @if (Umbraco.Field(Benefit, "logo").ToString() != "")
                                    {
                                        <div class="memberPhotoWrapper"><img src="/imagegen.ashx?image=@Umbraco.TypedMedia(Umbraco.Field(Benefit, "logo").ToString()).Url&width=200&constrain=false&crop=resize&compression=75" alt="@Benefit.Name)" style="margin-top: 20px;" /></div>
                                    }
                                </div>
                                <div class="col-xs-12 col-md-8">
                                    <h3>@Benefit.Name</h3>
                                    <p>@Umbraco.Field(Benefit, "bodyText")</p>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
            <div class="col-md-1 hidden-xs">
            </div>
        </div>
    </div>
</div>