@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "ReTeeMaster.cshtml";
}

<div class="container-fluid artileWrapper">
    <div class="container">
        <div class="col-xs-12 col-md-12 articleContainer">
            <div class="col-md-1 hidden-xs"></div>
            <div class="col-md-10 col-xs-12 articleBody">
                <h1>@CurrentPage.Name</h1>
                <article class="lead">
                    @Html.Raw(Umbraco.Field(CurrentPage, "bodyText"))
                </article>

                @{
                    if (CurrentPage.Children.Count() > 0)
                    {
                        <div class="row">
                        @foreach (var Player in CurrentPage.Children)
                        {
                        	<div class="col-xs-12 col-md-12 col-lg-6">
								<div  style="border: 1px solid red;">
                        		@if (Umbraco.Field(Player, "photo").ToString() != "") {
                        			<div class="" style="margin-top: 20px;"><img src="/imagegen.ashx?image=@Umbraco.TypedMedia(Umbraco.Field(Player, "photo").ToString()).Url&height=200&width=200&constrain=false&crop=resize&compression=75" alt="@Umbraco.Field(Player, "firstName") @Umbraco.Field(Player, "firstName")" /></div>
                                }
								@Umbraco.Field(Player, "firstName") @Umbraco.Field(Player, "lastName")<br/>
								@Umbraco.Field(Player, "pdgaNumber")
								@Umbraco.Field(Player, "classification")
								@Umbraco.Field(Player, "yearOfAccession")
								@Umbraco.Field(Player, "careerWins")
								<p class="bio">@Umbraco.Field(Player, "bio")</p>
								</div>
                             </div>
                        }
                        </div>
                    }
                }
            </div>
            <div class="col-md-1 hidden-xs">
            </div>
        </div>
    </div>
</div>